                        <div class="account">
                            <div>
                                Total
                            </div>
                            <div>
                                $185.00
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- this is a pay div start here -->
        <div class="pay">
            <div>
                <p>
                <h1>Payment</h1>
                </p>
                <p>All transaction are secured and encrypted</p>
            </div>
            <div>
                <div style="display: flex; justify-content: space-between;">
