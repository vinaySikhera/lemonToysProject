<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    /* General Styling */
    body {
        font-family: 'Comfortaa', sans-serif;
        background: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        padding: 20px;
    }

    .register {
        background: white;
        padding: 30px;
        border-radius: 16px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    /* Role Selection */
    .role-selection {
        display: flex;
        justify-content: space-between;
        margin: 15px 0;
    }

    .role {
        flex: 1;
        margin: 5px;
        padding: 15px;
        border: 2px solid #ccc;
        border-radius: 8px;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
        user-select: none;
    }

    .role:hover,
    .selected {
        border-color: #007bff;
        background: rgba(0, 123, 255, 0.1);
    }

    .role img {
        width: 40px;
    }

    .role span {
        display: block;
        font-size: 12px;
        color: #007bff;
    }

    /* Input Fields */
    .input-details {
        text-align: left;
        margin: 10px 0 5px;
        font-size: 14px;
    }

    input,
    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    textarea {
        resize: vertical;
        min-height: 60px;
    }

    /* Register Button */
    .register-btn {
        width: 100%;
        padding: 12px;
        background: green;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        transition: 0.3s;
    }

    .register-btn:hover {
        background: darkgreen;
    }

    /* Responsive Design */
    @media (max-width: 480px) {
        .register {
            padding: 20px;
        }

        .role-selection {
            flex-direction: column;
            gap: 10px;
        }

        .role {
            width: 100%;
        }
    }
</style>

<body>
    <form action="/adduser" method="POST" enctype="multipart/form-data">
        <div class="role-selection">
            <div class="role" data-role="Supplier">
                <img src="/images/Group.png" alt="Supplier">
                <strong>Supplier</strong>
                <span>Store Owner</span>
            </div>
            <div class="role" data-role="Customer">
                <img src="/images/Vector (1).png" alt="Customer">
                <strong>Customer</strong>
                <span>Buyer</span>
            </div>
        </div>

        <input type="hidden" id="selectedRole" name="role" value="">

        <div class="input-details">
            <label for="name">Full Name</label>
        </div>
        <input type="text" id="name" name="name" placeholder="Enter your full name" required>

        <div class="input-details">
            <label for="phone">Phone</label>
        </div>
        <input type="tel" id="phone" name="phone" placeholder="Enter your phone" pattern="[0-9]{10,15}" required>

        <div class="input-details">
            <label for="email">Email Address</label>
        </div>
        <input type="email" id="email" name="email" placeholder="Enter your email" required>

        <div class="input-details">
            <label for="profilePic">Profile Picture</label>
        </div>
        <input type="file" id="profilePic" name="profilePic" accept="image/*" required>

        <div class="input-details">
            <label for="password">Password</label>
        </div>
        <input type="password" id="password" name="password" placeholder="Enter your password" required minlength="6">

        <div class="input-details">
            <label for="address">Address</label>
        </div>
        <textarea id="address" name="address" placeholder="Enter your address" required></textarea>

        <div class="input-details">
            <label for="about">About</label>
        </div>
        <textarea id="about" name="about" placeholder="Tell us about yourself" required></textarea>

        <button type="submit" class="register-btn">Register</button>
    </form>
</body>

</html>
<script>
    // Role Selection Functionality
    const roles = document.querySelectorAll(".role");
    const selectedRoleInput = document.getElementById("selectedRole");

    roles.forEach(role => {
        role.addEventListener("click", function () {
            roles.forEach(r => r.classList.remove("selected"));
            this.classList.add("selected");
            selectedRoleInput.value = this.getAttribute("data-role");
        });
    });

    // Prevent form submission if no role is selected
    document.querySelector("form").addEventListener("submit", function (event) {
        if (!selectedRoleInput.value) {
            alert("Please select a role before registering.");
            event.preventDefault();
        }
    });

    // Real-time Validation Feedback
    document.getElementById("phone").addEventListener("input", function () {
        if (!this.value.match(/^\d{10,15}$/)) {
            this.setCustomValidity("Please enter a valid phone number (10-15 digits).");
        } else {
            this.setCustomValidity("");
        }
    });

    document.getElementById("password").addEventListener("input", function () {
        if (this.value.length < 6) {
            this.setCustomValidity("Password must be at least 6 characters.");
        } else {
            this.setCustomValidity("");
        }
    });
</script>