<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="shortcut icon" href="/images/lemontoyslogo.jpeg" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-weight: bold;
        }

        .active {
            background-color: #28a745;
            color: white;
        }

        .edit-btn {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .container {
            overflow: hidden;
        }

        @media (max-width: 1300px) {
            .container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;/
            }
        }

        @media (max-width: 768px) {
            .container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;/
            }

            .da-co {
                display: flex;
                flex-wrap: wrap;
            }
        }


        .view-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #ddd;
        }

        .whatsapp {
            /* border: 1px solid black; */
            height: 50px;

            /* margin-left: 20px; */
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .whatsapp>i {
            font-size: 35px;
            margin-top: 7px;

        }

        .whatsapp>input {
            padding-top: 10px;
            padding-bottom: 10px;
            border-radius: 15px;
            border: none;
            box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;
            padding-left: 20px;
        }

        .search-icon {
            /* border: 1px solid black; */
            height: 35px;
            width: 35px;
            border-radius: 50%;
            position: relative;
            background: #0F83B2;
            right: 35px;
        }

        .search-icon>i {
            font-size: 20px;
            margin-left: 8px;
            margin-top: 7px;
            color: white;
        }
    </style>
</head>

<body>
    <div class="da-co" style="display: flex;">
        <%- include('common/adminsidebar.ejs') %>
            <div class="container mt-5">
                <h2 class="text-center mb-4">List of All Users</h2>

                <!-- Role Filter Form -->
                <form method="GET" action="/allusers" class="mb-3">
                    <label for="role">Filter by Role:</label>
                    <select name="role" id="role" class="form-select w-25 d-inline" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="Supplier" <%=selectedRole==='Supplier' ? 'selected' : '' %>>Supplier</option>
                        <option value="Customer" <%=selectedRole==='Customer' ? 'selected' : '' %>>Customer</option>
                        <option value="Admin" <%=selectedRole==='Admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                </form>

                <div class="whatsapp" style="margin: 25PX;">
                    <input id="txt" type="search" placeholder="Search">
                </div>

                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>SR.</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Role</th>
                            <th>password</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (allusers.length> 0) { %>
                            <% allusers.forEach((user, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>

                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.address %>
                                    </td>
                                    <td>
                                        <%= user.role %>
                                    </td>
                                    <td>
                                        <%= user.password %>
                                    </td>
                                    <td>
                                        <a href="/editUser/<%= user._id %>" class="edit-btn">‚úè Edit</a>
                                        <a href="/viewUser/<%= user._id %>" class="view-btn">üëÅ View</a>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-danger">No users found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
    </div>
</body>

<script>
    const searchInput = document.getElementById('txt');
    const tableBody = document.querySelector('table tbody');

    const loading = document.createElement('div');
    loading.innerText = 'Loading...';
    loading.style.fontWeight = 'bold';
    loading.style.marginTop = '1rem';
    loading.style.display = 'none';

    const noResult = document.createElement('div');
    noResult.innerText = 'No results found.';
    noResult.style.fontWeight = 'bold';
    noResult.style.marginTop = '1rem';
    noResult.style.display = 'none';

    const container = document.querySelector('.container');
    container.appendChild(loading);
    container.appendChild(noResult);

    searchInput.addEventListener('keydown', async (event) => {
        if (event.key === 'Enter') {
            const query = searchInput.value.trim();

            loading.style.display = 'block';
            noResult.style.display = 'none';
            tableBody.innerHTML = '';

            try {
                const url = query
                    ? `/search-user?query=${encodeURIComponent(query)}`
                    : '/allusers-json'; // You should return all users in JSON from this route

                const res = await fetch(url);
                const users = await res.json();

                loading.style.display = 'none';

                if (!users.length) {
                    noResult.style.display = 'block';
                    return;
                }
                console.log(users)
                users.forEach((user, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>${user.name}</td>
                        <td>${user.phone}</td>
                        <td>${user.email}</td>
                        <td>${user.address}</td>
                        <td>${user.role}</td>
                        <td>${user.password}</td>
                        <td>
                            <a href="/editUser/${user._id}" class="edit-btn">‚úè Edit</a>
                            <a href="/viewUser/${user._id}" class="view-btn">üëÅ View</a>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });

            } catch (error) {
                loading.style.display = 'none';
                console.error("Search failed:", error);
            }
        }
    });
</script>


</html>