<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-weight: bold;
        }

        .active {
            background-color: #28a745;
            color: white;
        }

        .edit-btn {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .view-btn {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

        .profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #ddd;
        }
    </style>
</head>

<body>
    <div style="display: flex;">
        <%- include('common/adminsidebar.ejs') %>
            <div class="container mt-5">
                <h2 class="text-center mb-4">List of All Users</h2>

                <!-- Role Filter Form -->
                <form method="GET" action="/allusers" class="mb-3">
                    <label for="role">Filter by Role:</label>
                    <select name="role" id="role" class="form-select w-25 d-inline" onchange="this.form.submit()">
                        <option value="">All</option>
                        <option value="Supplier" <%=selectedRole==='Supplier' ? 'selected' : '' %>>Supplier</option>
                        <option value="Customer" <%=selectedRole==='Customer' ? 'selected' : '' %>>Customer</option>
                        <option value="Admin" <%=selectedRole==='Admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                </form>

                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>SR.</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (allusers.length> 0) { %>
                            <% allusers.forEach((user, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>

                                    <td>
                                        <%= user.name %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.address %>
                                    </td>
                                    <td>
                                        <%= user.role %>
                                    </td>
                                    <td>
                                        <a href="/editUser/<%= user._id %>" class="edit-btn">‚úè Edit</a>
                                        <a href="/viewUser/<%= user._id %>" class="view-btn">üëÅ View</a>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-danger">No users found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
    </div>
</body>

</html>