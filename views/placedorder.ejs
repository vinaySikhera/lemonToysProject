<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>placed order</title>
    <style>
        .order-table-container {
            padding: 2rem;
            max-width: 1200px;
            margin: auto;
            font-family: 'Segoe UI', sans-serif;
        }

        .order-table-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .order-table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .order-table thead {
            background-color: #f4f4f4;
        }

        .order-table th,
        .order-table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .order-table td img {
            width: 70px;
            height: auto;
            object-fit: cover;
            border-radius: 8px;
        }

        .order-table tbody tr:hover {
            background-color: #f9f9f9;
        }

        .order-summary {
            margin-top: 2rem;
            text-align: right;
            font-size: 1.1rem;
        }

        .order-summary strong {
            color: #222;
        }

        @media (max-width: 768px) {
            .order-table-container {
                padding: 1rem;
            }

            .order-table th,
            .order-table td {
                font-size: 0.9rem;
                padding: 8px;
            }

            .order-summary {
                font-size: 1rem;
            }
        }

        @media (max-width: 768px) {
            .order-table-container {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;/
            }
        }
    </style>
</head>

<body>
    <div style="display: flex; flex-wrap: wrap;">
    <%- include('common/adminsidebar.ejs') %>

    <div class="order-table-container">
        <h2>Placed Orders</h2>
        <table class="order-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th>QR Code</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order=> { %>
                    <tr>
                        <td><img src="<%= order.image %>" alt="<%= order.name %>"></td>
                        <td>
                            <%= order.name %>
                        </td>
                        <td>
                            <%= order.quantity %>
                        </td>
                        <td>₹<%= typeof order.price==='number' ? order.price.toFixed(2) : 'N/A' %>
                        </td>
                        <td>₹<%= (typeof order.price==='number' && typeof order.quantity==='number' ) ? (order.price
                                * order.quantity).toFixed(2) : 'N/A' %>
                        </td>
                        <td><img src="<%= order.qrCodeUrl %>" alt="QR Code" width="50"></td>

                        <% if (user.role==='Admin' ) { %>
                            <td>
                                <% if (order.status !=='Closed' ) { %>
                                    <button class="close-order-btn" data-id="<%= order._id %>">Close Order</button>
                                    <% } else { %>
                                        <span style="color: green;">Closed</span>
                                        <% } %>
                            </td>
                            <% } %>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</div>
</body>

</html>
<script>
    document.querySelectorAll('.close-order-btn').forEach(button => {
        button.addEventListener('click', () => {
            const orderId = button.getAttribute('data-id');

            fetch(`/close-order/${orderId}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert("Order closed successfully.");
                        location.reload();
                    } else {
                        alert("Failed to close order.");
                    }
                })
                .catch(err => {
                    console.error('Error closing order:', err);
                    alert("Server error.");
                });
        });
    });
</script>