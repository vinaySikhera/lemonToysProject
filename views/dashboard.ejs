<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- <link rel="stylesheet" href="/styles.css"> -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Reset default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        /* Layout setup */
        body {
            display: flex;
            background: #f4f4f4;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background: #fff;
            padding: 20px;
            height: 100vh;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h2 {
            text-align: center;
            font-size: 22px;
            margin-bottom: 20px;
            color: #333;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 15px;
            margin: 10px 0;
            background: #f8f8f8;
            cursor: pointer;
            text-align: center;
            font-size: 16px;
            border-radius: 5px;
            transition: 0.3s ease;
        }

        .sidebar ul li:hover {
            background: #ddd;
        }

        .sidebar ul .active {
            background: blue;
            color: white;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 20px;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        header h1 {
            font-size: 24px;
            color: #333;
        }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        /* Stats Cards */
        .stats {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .card {
            padding: 15px;
            border-radius: 8px;
            color: white;
            flex: 1;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }

        .green {
            background: green;
        }

        .yellow {
            background: orange;
        }

        .red {
            background: red;
        }

        .blue {
            background: blue;
        }

        /* Chart and Order Sections */
        .charts,
        .orders {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .chart,
        .order {
            padding: 20px;
            background: white;
            border-radius: 8px;
            flex: 1;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Canvas Styles for Chart.js */
        canvas {
            width: 100% !important;
            height: 200px !important;
            margin-top: 10px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
            }

            .charts,
            .orders,
            .stats {
                flex-direction: column;
            }

            .card,
            .chart,
            .order {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h2>LEMON TOY</h2>
        <ul>
            <li class="active">Dashboard</li>
            <li>Manage All Suppliers</li>
            <li>Manage All Users</li>
            <li>Manage All Products</li>
            <li>Manage All Orders</li>
            <li>Change Password</li>
            <li>Logout</li>
        </ul>
    </div>

    <div class="main-content">
        <header>
            <h1>Dashboard</h1>
            <div class="user-profile">
                <img src="/profile.png" alt="User">
            </div>
        </header>

        <div class="stats">
            <div class="card green">Suppliers: 118</div>
            <div class="card yellow">Users: 416</div>
            <div class="card red">Categories: 45</div>
            <div class="card blue">Products: 1978</div>
        </div>

        <div class="charts">
            <div class="chart">
                <h3>Approved Products</h3>
                <canvas id="approvedChart"></canvas>
            </div>
            <div class="chart">
                <h3>Pending Products</h3>
                <canvas id="pendingChart"></canvas>
            </div>
            <div class="chart">
                <h3>Rejected Products</h3>
                <canvas id="rejectedChart"></canvas>
            </div>
        </div>

        <div class="orders">
            <div class="order">
                <h3>Open Orders</h3>
                <canvas id="openOrdersChart"></canvas>
            </div>
            <div class="order">
                <h3>Close Orders</h3>
                <canvas id="closeOrdersChart"></canvas>
            </div>
            <div class="order">
                <h3>Total Orders</h3>
                <canvas id="totalOrdersChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        // Approved Products Chart
        const ctxApproved = document.getElementById('approvedChart').getContext('2d');
        new Chart(ctxApproved, {
            type: 'line',
            data: {
                labels: ['Sep', 'Oct', 'Nov', 'Dec', 'Jan', 'Feb'],
                datasets: [{
                    label: 'Approved Products ',
                    data: [1200, 1500, 1600, 1300, 1800, 1904],
                    borderColor: 'blue',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });

        // Pending Products Chart
        const ctxPending = document.getElementById('pendingChart').getContext('2d');
        new Chart(ctxPending, {
            type: 'bar',
            data: {
                labels: ['01', '04', '08', '12', '16', '18'],
                datasets: [{
                    label: 'Pending Products',
                    data: [2, 3, 5, 6, 4, 4],
                    backgroundColor: 'orange'
                }]
            }
        });

        // Rejected Products Chart
        const ctxRejected = document.getElementById('rejectedChart').getContext('2d');
        new Chart(ctxRejected, {
            type: 'pie',
            data: {
                labels: ['Accepted', 'Rejected'],
                datasets: [{
                    label: 'Rejected Products',
                    data: [1904, 70],
                    backgroundColor: ['green', 'red']
                }]
            }
        });

        // Open Orders Chart
        const ctxOpenOrders = document.getElementById('openOrdersChart').getContext('2d');
        new Chart(ctxOpenOrders, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'Open Orders',
                    data: [5, 6, 8, 7],
                    borderColor: 'blue',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });

        // Closed Orders Chart
        const ctxCloseOrders = document.getElementById('closeOrdersChart').getContext('2d');
        new Chart(ctxCloseOrders, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'Closed Orders',
                    data: [320, 330, 335, 338],
                    borderColor: 'purple',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });

        // Total Orders Chart
        const ctxTotalOrders = document.getElementById('totalOrdersChart').getContext('2d');
        new Chart(ctxTotalOrders, {
            type: 'bar',
            data: {
                labels: ['17', '18', '19', '20', '21', '22'],
                datasets: [{
                    label: 'Total Orders',
                    data: [300, 310, 320, 330, 340, 345],
                    backgroundColor: 'blue'
                }]
            }
        });

    </script>
</body>

</html>