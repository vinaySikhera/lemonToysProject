        .sidebar {
            width: 250px;
            background: #fff;
            padding: 20px;
            height: auto;

            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;

        }

        .sidebar h2 {
            text-align: center;
            font-size: 22px;
            margin-bottom: 20px;
            color: #333;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            padding: 15px;
            margin: 10px 0;
            background: #f8f8f8;
            cursor: pointer;
            text-align: center;
            font-size: 16px;
            border-radius: 5px;
            transition: 0.3s ease;
        }

        .sidebar ul li:hover {
            background: #ddd;
        }

        .sidebar ul .active {
            background: blue;
            color: white;
        }


        .sidebar ul .dropdown {
            position: relative;
        }

        .sidebar ul .dropdown-menu {
            display: none;
            list-style: none;
            padding: 0;
            margin: 0;
            background: #f8f8f8;
            position: absolute;
            left: 0;
            width: 100%;
            top: 100%;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

        .sidebar ul .dropdown-menu li {
            padding: 10px;
            text-align: left;
        }

        .sidebar ul .dropdown-menu li a {
            color: black;
            text-decoration: none;
        }


        .sidebar ul .dropdown:hover .dropdown-menu {
            display: block;
        }


        .sidebar ul .dropdown:hover {
            background: #ddd;
        }

        .sidebar ul .dropdown:hover .dropdown-menu {
            display: block;
        }

        .sidebar ul .dropdown:hover+li {
            margin-top: 140px;

        }




        /* Main Content */
        .main-content {
            flex: 1;
            padding: 20px;
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        header h1 {
            font-size: 24px;
            color: #333;
        }

        .user-profile img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        /* Stats Cards */
        .stats {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .card {
            padding: 15px;
            border-radius: 8px;
            color: white;
            flex: 1;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }

        .green {
            background: green;
        }

        .yellow {
            background: orange;
        }

        .red {
            background: red;
        }

        .blue {
            background: blue;
        }

        /* Chart and Order Sections */
        .charts,
        .orders {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .chart,
        .order {
            padding: 20px;
            background: white;
            border-radius: 8px;
            flex: 1;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Canvas Styles for Chart.js */
        canvas {
            width: 100% !important;
            height: 200px !important;
            margin-top: 10px;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
            }

            .charts,
            .orders,
            .stats {
                flex-direction: column;
            }

            .card,
            .chart,
            .order {
                width: 100%;
            }
        }
    </style>
