    <%- include('common/navbar.ejs') %>
        <div class="cart-container">
            <h2>Your Cart</h2>
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th></th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                        <th>QR Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
