<script>
    async function downloadCartPDF() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        let cart = JSON.parse(localStorage.getItem("cart")) || [];

        if (cart.length === 0) {
            alert("Your cart is empty.");
            return;
        }

        doc.text("Cart Summary", 20, 20);
        let yPosition = 30;

        for (let i = 0; i < cart.length; i++) {
            let product = cart[i];

            doc.text(`${i + 1}. ${product.name}`, 20, yPosition);
            doc.text(`Price: â‚¹${product.price}`, 20, yPosition + 10);
            doc.text(`Quantity: ${product.quantity}`, 20, yPosition + 20);
            doc.text(`Subtotal: â‚¹${(product.price * product.quantity).toFixed(2)}`, 20, yPosition + 30);

            // Convert images to Base64 and add them to the PDF
            let productImage = await getBase64Image(product.imageUrl);
            let qrCodeImage = await getBase64Image(product.qrCodeUrl);

            if (productImage) {
                doc.addImage(productImage, "JPEG", 150, yPosition - 10, 30, 30);
            }

            if (qrCodeImage) {
                doc.addImage(qrCodeImage, "JPEG", 180, yPosition - 10, 30, 30);
            }

            yPosition += 50; // Move down for next product
        }

        let totalAmount = cart.reduce((sum, product) => sum + product.price * product.quantity, 0) + 20;
        doc.text(`Total: â‚¹${totalAmount.toFixed(2)}`, 20, yPosition + 10);

        doc.save("cart-summary.pdf");
    }

    // Function to convert image URL to Base64
    function getBase64Image(url) {
        return new Promise((resolve, reject) => {
            let img = new Image();
            img.crossOrigin = "Anonymous"; // Handle CORS issues
            img.src = url;

            img.onload = function () {
                let canvas = document.createElement("canvas");
                canvas.width = img.width;
                canvas.height = img.height;

                let ctx = canvas.getContext("2d");
                ctx.drawImage(img, 0, 0);

                resolve(canvas.toDataURL("image/jpeg"));
            };

            img.onerror = function () {
                resolve(null);
            };
        });
    }
</script>